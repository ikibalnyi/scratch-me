{
  "schema": "https://json.schemastore.org/tsconfig",
  "compilerOptions": {
    "outDir": "dist",
    "incremental": true,
    "target": "ES2020",
    "module": "CommonJS",
    "moduleResolution": "node",
    "lib": ["esnext", "dom"],
    "sourceMap": true,
    "rootDir": "src",
    "removeComments": true,
    "isolatedModules": true,
    "strict": true,
    "skipLibCheck": true,
    "forceConsistentCasingInFileNames": true,
    "baseUrl": "src"
  },
  "include": ["**.ts"],
  "exclude": ["node-modules"]
}
